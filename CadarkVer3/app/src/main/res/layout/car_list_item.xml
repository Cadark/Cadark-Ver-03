<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:orientation="vertical"
        android:background="#eefff4a7">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/carImgCover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/toruk_electric_car"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#b8ffffff">

                <TextView
                    android:id="@+id/nameItemTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_weight="1"
                    android:textSize="21sp"
                    android:text="Car Nitro GT624"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/forma1"/>

                <TextView
                    android:id="@+id/numBidItemTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:textSize="18sp"
                    android:text="12"/>

                <ImageView
                    android:id="@+id/likeIconImg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:layout_marginBottom="9dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avarItemImg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="9dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/farah_yousef"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/bidItemIBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="9dp"
                    android:background="@drawable/call"/>

            </LinearLayout>

            <TextView
                android:id="@+id/priceItemTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="205dp"
                android:layout_marginLeft="80dp"
                android:textSize="27sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="2.000.000"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
